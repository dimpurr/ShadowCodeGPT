{
  "name": "shadowcodegpt",
  "displayName": "ShadowCodeGPT",
  "description": "A VS Code plugin for ChatGPT code project analysis.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "yourSidebarView",
          "name": "Your Sidebar",
          "when": "explorerResourceScheme == file",
          "icon": "your-icon.svg",
          "webview": "sidebar/sidebar.html"
        }
      ]
    },
    "commands": [
      {
        "command": "shadowcodegpt.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "shadowcodegpt.storeApiKey",
        "title": "Store API Key"
      },
      {
        "command": "shadowcodegpt.retrieveApiKey",
        "title": "Retrieve API Key"
      },
      {
        "command": "shadowcodegpt.fetchActiveTabCode",
        "title": "Fetch Active Tab Code"
      },
      {
        "command": "shadowcodegpt.RunPythonHelloWorld",
        "title": "Run Python Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.4",
    "node-fetch": "^3.3.1",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  }
}
